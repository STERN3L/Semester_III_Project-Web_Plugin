{
  "description": "Utilisation de webRequestsBlocking pour interrompre une requête vers un site web.",
  "manifest_version": 2,
  "name": "Plugin Sécurité Web",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://*.cloudflare.com; object-src 'self'",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent" : true     
  }
}
